{
  "name": "express_api",
  "version": "1.0.0",
  "description": "Teacher Hub API",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./server.ts",
    "test": "jest"
  },
  "author": "Fritz Jay",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mathjs": "^5.0.1",
    "mongoose": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mathjs": "^4.4.0",
    "@types/mongodb": "^3.0.21",
    "@types/mongoose": "^5.0.18",
    "@types/node": "^10.5.1",
    "jest": "^23.2.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node modules/",
      "dist"
    ],
    "testRegex": ".*spec.*.(js|ts|tsx)$$",
    "testURL": "https://localhost/"
  }
}
